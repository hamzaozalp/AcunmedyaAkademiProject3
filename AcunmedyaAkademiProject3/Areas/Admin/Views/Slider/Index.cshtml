@model IEnumerable<AcunmedyaAkademiProject3.Entities.Slider>

@{
    ViewData["Title"] = "Slider Yönetimi";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Slider Yönetimi</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Slider Ekle
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="vertical-align: middle;">
                                    <img src="@item.ImageUrl" alt="@item.Title" style="max-width: 80px; height: auto; border-radius: 4px;" class="img-thumbnail" />
                                </td>
                                <td style="vertical-align: middle;">@item.Title</td>
                                <td style="vertical-align: middle;">@item.Description</td>
                                <td style="vertical-align: middle;">
                                    <div class="btn-group" role="group" aria-label="Slider İşlemleri">
                                        <a asp-action="Edit" asp-route-id="@item.SliderId" class="btn btn-sm btn-warning d-flex align-items-center">
                                            <i class="fas fa-edit me-1"></i> Düzenle
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.SliderId" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger d-flex align-items-center" onclick="return confirm('Bu slider\'ı silmek istediğinizden emin misiniz?')">
                                                <i class="fas fa-trash-alt me-1"></i> Sil
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* Buraya özel scriptler eklenebilir *@
}