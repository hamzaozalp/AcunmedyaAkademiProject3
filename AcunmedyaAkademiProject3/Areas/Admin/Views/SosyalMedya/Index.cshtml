@model IEnumerable<AcunmedyaAkademiProject3.Entities.SocialMedia>

@{
    ViewData["Title"] = "Sosyal Medya Yönetimi";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Sosyal Medya Yönetimi</h2>
        <a asp-area="Admin" asp-controller="SosyalMedya" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Sosyal Medya Hesabı Ekle
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Simge</th>
                            <th>Kullanıcı Adı</th>
                            <th>Link</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="vertical-align: middle;"><i class="@item.Icon"></i></td>
                                <td style="vertical-align: middle;">@item.Username</td>
                                <td style="vertical-align: middle;">@item.Url</td>
                                <td style="vertical-align: middle;">
                                    <div class="btn-group" role="group" aria-label="Sosyal Medya İşlemleri">
                                        <a asp-area="Admin" asp-controller="SosyalMedya" asp-action="Edit" asp-route-id="@item.SocialMediaId" class="btn btn-sm btn-warning d-flex align-items-center">
                                            <i class="fas fa-edit me-1"></i> Düzenle
                                        </a>
                                        <form asp-area="Admin" asp-controller="SosyalMedya" asp-action="Delete" asp-route-id="@item.SocialMediaId" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger d-flex align-items-center" onclick="return confirm('Bu sosyal medya hesabını silmek istediğinizden emin misiniz?')">
                                                <i class="fas fa-trash-alt me-1"></i> Sil
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* Buraya özel scriptler eklenebilir *@
} 